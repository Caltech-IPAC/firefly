<module rename-to="firefly">

    <!-- Inherit the core Web Toolkit stuff.                  -->
    <inherits name='com.google.gwt.user.User'/>
    <inherits name='com.google.gwt.logging.Logging'/>
    <inherits name="com.google.gwt.http.HTTP"/>
    <inherits name="com.google.gwt.xml.XML"/>
    <inherits name="com.google.gwt.regexp.RegExp"/>


    <!-- Inherit from incubator.                  -->
    <inherits name='com.google.gwt.widgetideas.GWTCanvas'/>
    <inherits name="com.google.gwt.gen2.table.Table"/>

    <!-- Inherit from our common.                  -->
    <inherits name='edu.caltech.ipac.Common'/>


    <!-- Inherit more stuff.                  -->
    <inherits name='com.googlecode.gchart.GChart'/>
    <inherits name='com.thoughtworks.xstream.XStream'/>


    <!--<inherits name="com.google.gwt.user.theme.chrome.Chrome"/>-->
    <!--<inherits name="com.google.gwt.user.theme.dark.Dark"/>-->
    <!--<inherits name='com.hydro4ge.raphaelgwt.RaphaelGWT' />-->

    <source path="core"/>
    <source path="data"/>
    <source path="layout"/>
    <source path="rpc"/>
    <source path="ui"/>
    <source path="searches"/>
    <source path="util"/>
    <source path="fftools"/>
    <source path="visualize"/>
    <source path="bounce"/>
    <source path="commands"/>
    <source path="resbundle"/>

    <!--<stylesheet src="css/gwt-standard.css"/>-->
    <stylesheet src="css/ColorPicker.css"/>

    <set-property name="gwt.logging.logLevel" value="INFO" />
    <set-property name="gwt.logging.enabled"  value="TRUE" />
    <set-property name="gwt.logging.developmentModeHandler" value="ENABLED" />
    <set-property name="gwt.logging.systemHandler" value="DISABLED" />
    <set-property name="gwt.logging.popupHandler"  value="DISABLED" />
    <set-property name="gwt.logging.consoleHandler" value="ENABLED"/>
    <set-property name="gwt.logging.firebugHandler" value="ENABLED" />

    <!--The remote logger is enable in the code when server logging is specifically requested-->
    <set-property name="gwt.logging.simpleRemoteHandler" value="DISABLED" />




    <!--<add-linker name="xs" />-->

  </module>
