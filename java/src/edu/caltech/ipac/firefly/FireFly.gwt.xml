<module rename-to="firefly">

    <!-- Inherit the core Web Toolkit stuff.                  -->
    <inherits name='com.google.gwt.user.User'/>
    <inherits name='com.google.gwt.logging.Logging'/>
    <inherits name="com.google.gwt.http.HTTP"/>
    <inherits name="com.google.gwt.xml.XML"/>
    <inherits name="com.google.gwt.regexp.RegExp"/>


    <!-- Inherit from incubator.                  -->
    <inherits name='com.google.gwt.widgetideas.GWTCanvas'/>
    <inherits name="com.google.gwt.gen2.table.Table"/>


    <!-- Inherit from our common.                  -->
    <inherits name='edu.caltech.ipac.Common'/>


    <!-- Inherit more stuff.                  -->
    <inherits name="net.zschech.gwt.comet.Comet" />
    <inherits name='com.googlecode.gchart.GChart'/>
    <inherits name='com.thoughtworks.xstream.XStream'/>


    <!--<inherits name="com.google.gwt.user.theme.chrome.Chrome"/>-->
    <!--<inherits name="com.google.gwt.user.theme.dark.Dark"/>-->
    <!--<inherits name='com.hydro4ge.raphaelgwt.RaphaelGWT' />-->

    <source path="core"/>
    <source path="data"/>
    <source path="layout"/>
    <source path="rpc"/>
    <source path="ui"/>
    <source path="searches"/>
    <source path="util"/>
    <source path="task"/>
    <source path="fftools"/>
    <source path="fuse"/>
    <source path="visualize"/>
    <source path="bounce"/>
    <source path="commands"/>
    <source path="resbundle"/>

    <!--common GWT classes-->
    <source path="../astro/conv"/>
    <source path="../visualize/plot/projection"/>
    <source path="../astro/">
        <include name="CoordException.java"/>
    </source>
    <source path="../visualize/plot/" >
        <include name="ProjectionPt.java"/>
        <include name="*Pt.java"/>
        <include name="CoordinateSys.java"/>
        <include name="ProjectionException.java"/>
        <include name="PixelValueException.java"/>
        <include name="RangeValues.java"/>
        <include name="CoveragePolygons.java"/>
        <include name="Circle.java"/>
        <include name="ImageCorners.java"/>
        <include name="MiniFitsHeader.java"/>
    </source>
    <source path="../visualize/draw/">
        <include name="Metrics.java"/>
        <include name="Metric.java"/>
    </source>
    <source path="../data/">
        <include name="DataConst.java"/>
    </source>
    <source path="../util/">
        <include name="ComparisonUtil.java"/>
        <include name="CollectionUtil.java"/>
        <include name="StringTokenizer.java"/>
        <include name="StringUtils.java"/>
        <include name="MapPropertyLoader.java"/>
        <include name="Cache.java"/>
        <include name="Base64.java"/>
        <include name="HandSerialize.java"/>
        <include name="RegionFactory.java"/>
    </source>
    <source path="../util/dd">
        <include name="*FieldDef.java"/>
        <include name="FieldDef.java"/>
        <include name="Region.java"/>
        <include name="Region*.java"/>
        <include name="FieldDefSource.java"/>
        <include name="MappedFieldDefSource.java"/>"
        <include name="UIAttrib.java"/>
        <include name="UIAttributes.java"/>
        <include name="UIComponent.java"/>
        <include name="ValidationException.java"/>
        <include name="ParseResult.java"/>
        <include name="RegParseException.java"/>
        <include name="Global.java"/>
        <include name="ContainsOptions.java"/>
        <include name="VOResourceEndpoint.java"/>
    </source>
    <source path="../util/decimate"/>
    <source path="../util/expr"/>
    <source path="../util/action">
        <include name="ActionConst.java"/>
    </source>
    <source path="../targetgui/net/">
        <include name="Resolver.java"/>
    </source>
    <!--End of common GWT classes-->

    <define-linker name="nowaitlinker" class="edu.caltech.ipac.firefly.linker.NoWaitingLinker" />

    <!--<stylesheet src="css/gwt-standard.css"/>-->
    <stylesheet src="css/ColorPicker.css"/>

    <set-property name="gwt.logging.logLevel" value="INFO"/>
    <set-property name="gwt.logging.enabled" value="TRUE"/>
    <set-property name="gwt.logging.developmentModeHandler" value="ENABLED"/>
    <set-property name="gwt.logging.systemHandler" value="DISABLED"/>
    <set-property name="gwt.logging.popupHandler" value="DISABLED"/>
    <set-property name="gwt.logging.consoleHandler" value="ENABLED"/>
    <set-property name="gwt.logging.firebugHandler" value="ENABLED"/>

    <!--The remote logger is enable in the code when server logging is specifically requested-->
    <set-property name="gwt.logging.simpleRemoteHandler" value="DISABLED"/>

    <!--Uncomment for development - faster compile only for firefox,chrome,safari -->
    <!--<set-property name="user.agent" value="gecko1_8,safari"/>-->


</module>
