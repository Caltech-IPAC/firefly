<project name="IRSA VO services Build File" default="all" basedir=".">
    <description>
        The build file for building voservices.war
    </description>

    <property name="build.root" value="${basedir}/../../../../.."/>


    <import file="${build.root}/../config/voservices/build.xml"/>


    <path id="voservices.webapp.lib">
        <pathelement path="${firefly.jars.dir}/firefly.jar"/>
        <file file="${firefly.jars.dir}/xstream/xstream-1.3.1.jar"/>
        <file file="${firefly.jars.dir}/xstream/xpp3_min-1.1.4c.jar"/>
        <file file="${firefly.jars.dir}/votable/voi.vowrite.jar"/>
        <file file="${common.jars.dir}/uplink_util.jar"/>
        <file file="${common.jars.dir}/client.jar"/>
        <file file="${common.jars.dir}/data.jar"/>
        <file file="${common.jars.dir}/astro.jar"/>
        <file file="${common.jars.dir}/commons-discovery-0.2.jar"/>
    </path>

    <!-- set of jars file the web application relies on -->
    <pathconvert pathsep=" " property="runtime.jars.files" refid="voservices.webapp.lib">
        <map from="${dev.root.dir}/" to=""/>
    </pathconvert>




    <target name="all" depends="init, firefly, webapp-setup, compile, config-build, webapp.war"
            description="build everything.. including the war file">
    </target>

    <import file="${build.root}/tools/webapp_build_template.xml"/>


</project>
