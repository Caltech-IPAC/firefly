<!--    Listeners                         -->
    <listener>
        <listener-class>net.sf.ehcache.constructs.web.ShutdownListener</listener-class>
    </listener>

<!--    Resources                         -->


    <resource-ref>
        <description>Archive Datasource</description>
        <res-ref-name>jdbc/Archive</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <resource-ref>
        <description>Operation Datasource</description>
        <res-ref-name>jdbc/Operation</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <resource-ref>
        <description>Heritage Mail Session</description>
        <res-ref-name>MailSession</res-ref-name>
        <res-type>javax.mail.Session</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>

    <context-param>
        <param-name>AppName</param-name>
        <param-value>Heritage Archive</param-value>
    </context-param>


