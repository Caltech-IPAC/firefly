    <!--JossoVerifyFilter-->
    <filter>
        <filter-name>JossoVerifyFilter</filter-name>
        <filter-class>edu.caltech.ipac.firefly.server.security.JossoVerifyFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>JossoVerifyFilter</filter-name>
        <url-pattern>/josso_verify</url-pattern>
    </filter-mapping>

    <!--CommonFilter-->
    <filter>
        <filter-name>CommonFilter</filter-name>
        <filter-class>edu.caltech.ipac.firefly.server.filters.CommonFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CommonFilter</filter-name>
        <url-pattern>/admin/*</url-pattern>
        <url-pattern>/rpc/*</url-pattern>
        <url-pattern>/servlet/*</url-pattern>
        <url-pattern>/sticky/*</url-pattern>
        <url-pattern>/Heritage.html</url-pattern>
    </filter-mapping>

    <!--NoCacheFilter-->
    <filter>
        <filter-name>NoCacheFilter</filter-name>
        <filter-class>edu.caltech.ipac.firefly.server.filters.NoCacheFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>NoCacheFilter</filter-name>
        <url-pattern>/heritage.nocache.js</url-pattern>
        <url-pattern>/Heritage.html</url-pattern>
    </filter-mapping>

    <!--GZipFilter-->
    <filter>
        <filter-name>GZipFilter</filter-name>
        <filter-class>net.sf.ehcache.constructs.web.filter.GzipFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>GZipFilter</filter-name>
        <url-pattern>*.html</url-pattern>
        <url-pattern>*.css</url-pattern>
        <url-pattern>*.js</url-pattern>
        <url-pattern>/servlet/FireFly_PropertyDownload</url-pattern>
    </filter-mapping>


