<module rename-to="heritage">
    <inherits name='com.google.gwt.user.theme.standard.Standard'/>
    <inherits name='edu.caltech.ipac.firefly.FireFly'/>

    <!-- Specify the app entry point class.                   -->
    <entry-point class='edu.caltech.ipac.heritage.core.Heritage'/>

    <source path="commands"/>
    <source path="core"/>
    <source path="data/entity"/>
    <source path="rpc"/>
    <source path="searches"/>
    <source path="ui"/>


    <!-- The following line should be removed when gwt fixes showing their code.  -->
    <set-property name="gwt.suppressNonStaticFinalFieldWarnings" value="true" />

    <stylesheet src="heritage.css"/>
    <add-linker name="xsiframe" />

    <set-configuration-property name="devModeRedirectEnabled" value="true"/>
    <set-property name="compiler.useSourceMaps" value="true" />


</module>
