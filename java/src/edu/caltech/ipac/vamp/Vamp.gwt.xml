<module rename-to="vamp">
    <inherits name='edu.caltech.ipac.firefly.FireFly'/>
    <!-- Specify the app entry point class.                   -->
    <entry-point class='edu.caltech.ipac.vamp.core.Vamp'/>

    <source path="core"/>
    <source path="data"/>
    <source path="ui"/>
    <source path="commands"/>
    <source path="searches"/>


    <!-- The following line should be removed when gwt fixes showing their code.  -->
    <set-property name="gwt.suppressNonStaticFinalFieldWarnings" value="true" />


    <!-- RPC DECLARATIONS                              -->
    <servlet path="/rpc/SearchServices"
             class="edu.caltech.ipac.heritage.server.rpc.SearchServicesImpl"/>
    <servlet path="/rpc/Heritage_DownloadService"
             class="edu.caltech.ipac.firefly.server.rpc.DownloadServiceImpl"/>


    <!-- SERVLET DECLARATIONS                          -->
    <servlet path="/servlet/SaveAsIpacTable"
             class="edu.caltech.ipac.firefly.server.servlets.SaveAsIpacTable"/>
    <servlet path="/servlet/ProductDownload"
             class="edu.caltech.ipac.heritage.server.servlet.ProductDownload"/>
    <servlet path="/servlet/Heritage_TargetsUploader"
             class="edu.caltech.ipac.heritage.server.servlet.TargetsUploader"/>

    
    <stylesheet src="css/vamp.css"/>

</module>
