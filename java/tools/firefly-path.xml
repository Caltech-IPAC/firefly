<project name="Firefly path file" basedir=".">
    <!-- project specific's property -->
    <property name="firefly.jars.dir" location="${build.root}/../jars"/>

<!-- ******************************************************************
        third-party library declaration
     ****************************************************************** -->
    <condition property="gwt.platform.specific.jars" value="gwt/mac/*.jar">
        <and>
            <os family="mac"/>
        </and>
    </condition>

    <condition property="gwt.platform.specific.jars" value="gwt/windows/*.jar">
        <and>
            <os family="windows"/>
        </and>
    </condition>

    <condition property="gwt.platform.specific.jars" value="gwt/linux/*.jar">
        <and>
            <os name="Linux"/>
        </and>
    </condition>

    <fileset id="spotCommon.lib.fs" dir="${common.jars.dir}">
        <include name="axis.jar"/>
        <!--<include name="commons-logging-1.0.4.jar"/>-->
        <include name="commons-discovery-0.2.jar"/>
        <include name="saaj.jar"/>
        <include name="wsdl4j-1.5.1.jar"/>
        <include name="stil.jar"/>
        <include name="archive_dto_votable.jar"/>
        <include name="uplink_util.jar"/>
        <include name="astro.jar"/>
        <include name="client.jar"/>
        <include name="data.jar"/>
        <include name="fits.jar"/>
        <include name="fits_io.jar"/>        
        <include name="meta.jar"/>
        <include name="planner.jar"/>
        <include name="simbad_ws.jar"/>
        <include name="uplink_util.jar"/>
        <include name="xbean.jar"/>
        <include name="jsr173_1.0_api.jar"/>
        <!--<include name="ifxjdbc.jar"/>-->
        <include name="jaxrpc.jar"/>
        <!--<include name="mail.jar"/>-->
        <!--<include name="activation.jar"/>-->
        <include name="flyingsaucer/iText-2.0.8.jar"/>
        <include name="flyingsaucer/core-renderer.jar"/>
    </fileset>


    <fileset id="gwtCommon.lib.fs" dir="${common.jars.dir}">
        <include name="common-gwt.jar"/>
    </fileset>

    <fileset id="gwt.lib.fs" dir="${firefly.jars.dir}">
        <include name="gwt/*.jar"/>
        <include name="gwt-incubator/canvas-2.1-r1766.jar"/>
        <include name="gwt-incubator/gwt-incubator-2.1-r1766-striped.jar"/>
        <include name="gwt-incubator/gchart.jar"/>
        <include name="colorpicker/colorpicker_0.2.jar"/>
    </fileset>

    <fileset id="gxt.lib.fs" dir="${firefly.jars.dir}">
        <include name="gxt/gxt_1.2.1.jar"/>
    </fileset>

    <fileset id="log4j.jars.fs" dir="${firefly.jars.dir}">
        <include name="log4j/*.jar"/>
    </fileset>

    <fileset id="ehcache.jars.fs" dir="${firefly.jars.dir}/ehcache">
        <include name="ehcache-2.7.4.jar"/>
        <include name="slf4j-api-1.6.6.jar"/>
        <include name="ehcache-web-2.0.4.jar"/>
    </fileset>

    <fileset id="spring.jars.fs" dir="${firefly.jars.dir}/spring">
        <include name="*.jar"/>
    </fileset>

    <fileset id="apache.jars" dir="${firefly.jars.dir}/jakarta-commons">
        <include name="commons-fileupload.jar"/>
        <include name="commons-io.jar"/>
        <include name="commons-httpclient.jar"/>
        <include name="commons-codec.jar"/>
        <include name="commons-lang.jar"/>
        <include name="commons-csv-1.0-201209.jar"/>
    </fileset>

    <fileset id="hibernate.lib.fs" dir="${firefly.jars.dir}">
        <include name="hibernate/hibernate3.jar"/>
        <include name="hibernate/hibernate-entitymanager.jar"/>
        <include name="hibernate/hibernate-annotations.jar"/>
        <include name="hibernate/hibernate-commons-annotations.jar"/>
<!-- dependent jars  -->
        <include name="antlr/antlr-2.7.6.jar"/>
        <include name="asm/*.jar"/>
        <include name="cglib/*.jar"/>
        <include name="jakarta-commons/commons-collections.jar"/>
        <!--<include name="jakarta-commons/commons-logging.jar"/>-->
        <include name="j2ee/jta.jar"/>
        <include name="dom4j/dom4j-1.6.1.jar"/>
        <!--<include name="log4j/log4j-1.2.14.jar"/>-->
        <include name="c3p0/c3p0-0.9.1.1.jar.jar"/>
        <!--<include name="ehcache/*.jar"/>-->

    </fileset>

    <fileset id="ibatis.lib.fs" dir="${firefly.jars.dir}">
        <include name="ibatis/ibatis-2.3.0.677.jar"/>
<!-- dependent jars -->
        <include name="jakarta-commons/commons-collections.jar"/>
        <include name="jakarta-commons/commons-pool.jar"/>
        <include name="jakarta-commons/commons-dbcp.jar"/>        
    </fileset>

    <fileset id="mysql.lib.fs" dir="${firefly.jars.dir}">
       <include name="mysql/mysql-connector-java-5.1.6-bin.jar"/>
    </fileset>

    <fileset id="informix.lib.fs" dir="${firefly.jars.dir}">
       <include name="informix/ifxjdbc.jar"/>
    </fileset>

    <fileset id="healpix.lib.fs" dir="${firefly.jars.dir}">
       <include name="HEALPix/jhealpix_compat.jar"/>
    </fileset>

    <fileset id="solrj.lib.fs" dir="${firefly.jars.dir}">
       <include name="solr/apache-solr-common-1.3.0.jar"/>
       <include name="solr/apache-solr-solrj-1.3.0.jar"/>
    </fileset>

    <fileset id="josso.lib.fs" dir="${firefly.jars.dir}">
       <include name="josso/josso-ws-1.8.5.jar"/>
    </fileset>

    <fileset id="votable.lib.fs" dir="${firefly.jars.dir}">
       <include name="votable/voi.vowrite.jar"/>
    </fileset>

    <!-- class and resource finder to find annotated classes att runtime -->
    <fileset id="xbeanfinder.lib.fs" dir="${firefly.jars.dir}">
       <include name="xbean/xbean-finder-3.6.jar"/>
       <include name="asm/asm-3.2.jar"/>
       <include name="asm/asm-commons-3.2.jar"/>
       <include name="asm/asm-tree-3.2.jar"/>
    </fileset>

    

<!-- ******************************************************************
         these are jar files Tomcat needs
     ****************************************************************** -->
    <path id="firefly.appserver.dependent.jars">
        <fileset refid="ehcache.jars.fs"/>
        <fileset dir="${firefly.jars.dir}">
            <include name="jakarta-commons/commons-logging.jar"/>
            <include name="j2ee/servlet-api.jar"/>
            <include name="j2ee/mail.jar"/>
            <include name="j2ee/activation.jar"/>
            <include name="log4j/log4j-1.2.14.jar"/>
        </fileset>
    </path>


<!-- ******************************************************************
        project declared path ...  other projects may reference it
     ****************************************************************** -->
    <path id="firefly.gwt.compile.path">
        <pathelement path="${src.dir}"/>
        <fileset refid="gwtCommon.lib.fs"/>
        <fileset refid="gwt.lib.fs"/>
        <file file="${firefly.jars.dir}/firefly.jar"/>
        <file file="${firefly.jars.dir}/gwt-comet.jar"/>
        <file file="${firefly.jars.dir}/xstream-gwt.jar"/>
        <file file="${firefly.jars.dir}/raphael-modified-r24.jar"/>
    </path>

    <path id="firefly.host.mode.path">
        <pathelement path="${src.dir}"/>
        <file file="${firefly.jars.dir}/xstream-gwt.jar"/>
        <file file="${firefly.jars.dir}/raphael.jar"/>
        <path refid="firefly.javac.classpath"/>
    </path>

    <path id="firefly.webapp.lib">
        <pathelement path="${firefly.jars.dir}/j2ee/servlet-api.jar"/>
        <pathelement path="${firefly.jars.dir}/gwt/gwt-servlet.jar"/>
        <pathelement path="${firefly.jars.dir}/firefly.jar"/>
        <pathelement path="${firefly.jars.dir}/gwt-comet.jar"/>
        <fileset refid="spotCommon.lib.fs"/>
        <fileset refid="apache.jars"/>
        <fileset refid="spring.jars.fs"/>
        <fileset refid="gwtCommon.lib.fs"/>
        <fileset refid="log4j.jars.fs"/>
        <fileset refid="josso.lib.fs"/>
        <fileset refid="healpix.lib.fs"/>
    </path>

    <path id="firefly.javac.classpath">
        <pathelement path="${dest.dir}"/>
        <path refid="firefly.webapp.lib"/>
        <fileset refid="gwt.lib.fs"/>
        <!--<fileset refid="gxt.lib.fs"/>-->
        <!--<fileset refid="ibatis.lib.fs"/>-->
        <fileset refid="hibernate.lib.fs"/>
        <path refid="firefly.appserver.dependent.jars"/>
    </path>


</project>
