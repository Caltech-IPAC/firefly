    <fileset id="xstream.lib.fs" dir="${firefly.jars.dir}/xstream/">
        <include name="xstream-1.3.1.jar"/>
        <include name="xpp3_min-1.1.4c.jar"/>
    </fileset>

    <!-- class and resource finder to find annotated classes att runtime -->
    <fileset id="xbeanfinder.lib.fs" dir="${firefly.jars.dir}">
       <include name="xbean/xbean-finder-3.6.jar"/>
       <include name="asm/asm-3.2.jar"/>
       <include name="asm/asm-commons-3.2.jar"/>
       <include name="asm/asm-tree-3.2.jar"/>
    </fileset>


<!-- ******************************************************************
        project declared path ...  other projects may reference it
     ****************************************************************** -->
    <path id="firefly.gwt.compile.path">
        <pathelement path="${src.dir}"/>
        <fileset refid="gwtCommon.lib.fs"/>
        <fileset refid="gwt.lib.fs"/>
        <file file="${firefly.jars.dir}/firefly.jar"/>
        <file file="${firefly.jars.dir}/gwt-comet.jar"/>
        <file file="${firefly.jars.dir}/xstream-gwt.jar"/>
        <file file="${firefly.jars.dir}/raphael-modified-r24.jar"/>
    </path>

    <path id="firefly.host.mode.path">
        <pathelement path="${src.dir}"/>
        <file file="${firefly.jars.dir}/xstream-gwt.jar"/>
        <file file="${firefly.jars.dir}/raphael.jar"/>
        <path refid="firefly.javac.classpath"/>
    </path>

    <path id="firefly.webapp.lib">
        <pathelement path="${firefly.jars.dir}/gwt/gwt-servlet.jar"/>
        <pathelement path="${firefly.jars.dir}/gwt/gwt-servlet-deps.jar"/>
        <pathelement path="${firefly.jars.dir}/firefly.jar"/>
        <pathelement path="${firefly.jars.dir}/gwt-comet.jar"/>
        <fileset refid="spotCommon.lib.fs"/>
        <fileset refid="apache.jars"/>
        <fileset refid="spring.jars.fs"/>
        <fileset refid="gwtCommon.lib.fs"/>
        <fileset refid="log4j.jars.fs"/>
        <fileset refid="josso.lib.fs"/>
        <fileset refid="healpix.lib.fs"/>
        <fileset refid="xstream.lib.fs"/>
        <fileset refid="xbeanfinder.lib.fs"/>
    </path>

    <path id="firefly.javac.classpath">
        <file file="${firefly.jars.dir}/j2ee/servlet-api.jar"/>
        <pathelement path="${dest.dir}"/>
        <path refid="firefly.webapp.lib"/>
        <fileset refid="gwt.lib.fs"/>
        <fileset refid="ehcache.jars.fs"/>
    </path>


</project>
