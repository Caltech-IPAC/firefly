{
    "tags": {
        "allowUnknownTags| ": true,
        "dictionaries": ["jsdoc","closure"]
    },
    "source": {
        "include": [
           "./js/api/",
           "./js/tables/TableUtil.js",
           "./js/charts/XYPlotCntlr.js",
           "./js/charts/ChartUtil.js",
           "./js//visualize/CsysConverter.js",
           "./js/visualize/DrawLayerCntlr.js",
           "../../docs/firefly-api-overview.md"

        ],
      "exclude": [
          // enter the excluded files here as an array
       ],
        "includePattern": ".+\\.js(doc)?|(x)$",
        "excludePattern": "(^|\\/|\\\\)_"
    },

    "plugins": [
       "plugins/markdown",
       "plugins/summarize"
    ],

   "markdown" : {
    "idInHeadings" : true
   },

  "jsx": {
        "extensions": ["js", "jsx"]
    },
   "staticFiles": {
        "include": ["../../docs"],
        "exclude": ["../../docs/firefly-api-code-examples.md"],
        "includePattern": ".+\\.md?$",
        "recursive": true

    },


    "opts": {
        "template": "../../node_modules/ink-docstrap/template", //use the docstrap template insetad of the default
        "encoding": "utf8",                               // same as -e utf8
        "recurse": true ,                                 // same as -r
        "tutorials": "../../tutorial/",                      // same as -u path/to/tutorials
        "access": "public"                                  //same as -a  <value>, values are all, public, private etc

    },
    "templates": {
        "cleverLinks" : false,
        "monospaceLinks" : false,
        "useLongnameInNav" : true,
        "recursive" : true,
        "outputSourceFiles" :true,
        "includeDate" :true,
        "navType" : "vertical",
        "inverseNav" : true,
        "linenums" :true,
        "collapseSymbols" : false,
        "systemName" : "Firefly",
        "theme" : "spacelab"
    }

}

