<project name="IRSA Hydra configuration build" default="config-deploy" basedir=".">
    <description>
        The build file for Hydra's configuration
    </description>

    <property name="build.root" value="${basedir}/../../java"/>
    <property name="ehcache.multicast.port" value="4032"/>
    <property name="ads.tag.prefix" value="ADS/Sa.Wise"/>

    <property name="config-src-name" value="hydra"/>
    <property name="webapp.name" value="applications/iwise"/>
    <property name="app-name" value="iwise"/>
    <property name="proj-id" value="wise"/>
    <property name="additional-files" value="configurable/projectList.xml
                                        configurable/wise/*.xml
                                        configurable/wise/*.xml.txt
                                    "/>

<!--iwise specific parameters    -->
    <property name="GatorHost" value="https://wise:orare{wise}@ceres.ipac.caltech.edu"/>
    <property name="irsa.gator.dd.hostname" value="https://wise:orare{wise}@ceres.ipac.caltech.edu"/>
    <property name="irsa.gator.hostname" value="https://wise:orare{wise}@ceres.ipac.caltech.edu"/>
    <property name="wise.gator.hostname" value="https://wise:orare{wise}@ceres.ipac.caltech.edu"/>
    <property name="wise.filesystem_basepath" value="***REMOVED***irsa-wise-links-ops"/>
<!-- END: iwise specific parameters    -->

    <import file="${build.root}/tools/config_build_template.xml"/>

    <target name="config-build">

        <copy file="${build.root}/../config/hydra/configurable/wise/wise_internal.xml" tofile="${build.root}/../config/hydra/configurable/wise/wise.xml"/>

        <antcall target="config build template.config-build" inheritall="true" inheritrefs="true"/>
        <delete file="${build.root}/../config/hydra/configurable/wise/wise.xml"/>
    </target>

</project>
