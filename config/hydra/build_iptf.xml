<project name="IRSA Hydra configuration build" default="config-deploy" basedir=".">
    <description>
        The build file for Hydra's configuration
    </description>

    <property name="build.root" value="${basedir}/../../java"/>
    <property name="ehcache.multicast.port" value="4062"/>
    <property name="ads.tag.prefix" value="ADS/Sa.PTF"/>

    <property name="config-src-name" value="hydra"/>
    <property name="webapp.name" value="applications/iptf"/>
    <property name="app-name" value="iptf"/>
    <property name="proj-id" value="ptf"/>
    <property name="additional-files" value="configurable/projectList.xml
                                        configurable/ptf/ptf.xml
                                    "/>
    <import file="${build.root}/tools/config_build_template.xml"/>

    <target name="config-build">

        <copy file="${build.root}/../config/hydra/configurable/ptf/ptf_internal.xml"
              tofile="${build.root}/../config/hydra/configurable/ptf/ptf.xml"/>

        <antcall target="config build template.config-build" inheritall="true" inheritrefs="true"/>
        <delete file="${build.root}/../config/hydra/configurable/ptd/ptf.xml"/>
    </target>

</project>
