<project name="IRSA Hydra configuration build" default="config-deploy" basedir=".">
    <description>
        The build file for Hydra's configuration
    </description>

    <property name="build.root" value="${basedir}/../../java"/>
    <property name="ehcache.multicast.port" value="4031"/>
    <property name="ads.tag.prefix" value="ADS/Sa.Wise"/>

    <property name="config-src-name" value="hydra"/>
    <property name="webapp.name" value="applications/wise"/>
    <property name="app-name" value="wise"/>
    <property name="additional-files" value="configurable/projectList.xml
                                        configurable/wise/*.xml
                                        configurable/wise/*.xml.txt
                                    "/>

    <import file="${build.root}/tools/config_build_template.xml"/>

    <target name="config-build">

        <property name="wise.filesystem_basepath" value="***REMOVED***irsa-wise-links-public"/>
        <copy file="${build.root}/../config/hydra/configurable/wise/wise_ops.xml" tofile="${build.root}/../config/hydra/configurable/wise/wise.xml"/>

        <antcall target="config build template.config-build" inheritall="true" inheritrefs="true"/>
        <delete file="${build.root}/../config/hydra/configurable/wise/wise.xml"/>
    </target>
</project>
