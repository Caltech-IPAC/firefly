<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Project SYSTEM "../../../hydra/project.dtd">

<Project>
    <Name>vamp</Name>
    <Title>VAMP at IPAC</Title>

    <SearchGroup>
        <Name>vamp</Name>
        <Title>VAMP at IPAC</Title>

        <SearchType>
            <Name>AvmKeywordSearch</Name>
            <Title>AVM Keyword Search</Title>
            <Tooltip>Full text search of AVM metadata</Tooltip>
            <Form>
                <FieldGroup>
                    <String>
                        <Name>search</Name>
                        <Title>Search</Title>
                        <PreferWidth>30</PreferWidth>
                        <ShortDescription>Enter terms to search on</ShortDescription>
                        <ErrorDescription>Must not be blank</ErrorDescription>
                    </String>
                    <Label><![CDATA[<i>Enter the string on which you'd like to search.</i>]]></Label>
                </FieldGroup>
            </Form>
            <Query id="qVamp"/>
            <Result>
                <Layout>
                    <SplitPanel>
                        <Center layout="horizontal">
                            <!-- after registering type with WidgetFactory, define here -->
                            <Table type="CUSTOM_TYPE_HERE">
                                <QueryId>qVamp</QueryId>
                                <Name>vampName</Name>
                                <Title>VAMP Table Results</Title>
                                <Param key="CUSTOM_PARAMS_HERE" value="values"/>
                                <Param key="MORE_PARAMS" value="value"/>
                            </Table>
                        </Center>
                    </SplitPanel>
                </Layout>
            </Result>
        </SearchType>
    </SearchGroup>

</Project>
